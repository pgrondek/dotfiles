#!/usr/bin/env sh

URGENCY=low
EXPIRE=5000

ALSA_CMD="pamixer"
NOTIFY_CMD="notify-send -u $URGENCY -t $EXPIRE VOLUME "

$ALSA_CMD --set-volume "$1"
LEVEL=$($ALSA_CMD --get-volume)

notify-send -u $URGENCY \
  -h "int:value:$LEVEL" \
  -h string:x-dunst-stack-tag:volume_notif \
  -t $EXPIRE \
  "VOLUME: $LEVEL"
